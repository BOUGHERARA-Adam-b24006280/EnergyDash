# Active le moteur de réécriture d'URL
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Définit le dossier "public" comme racine du site
    RewriteBase /

    # Ne pas réécrire si le fichier ou le dossier existe déjà
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Redirige tout vers index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Empêche l’accès direct à certains fichiers sensibles
<FilesMatch "\.(env|json|lock|yml|ini|log|sql)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Active la mise en cache des assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>